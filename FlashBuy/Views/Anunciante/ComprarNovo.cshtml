
@{
    ViewBag.Title = "ComprarNovo";
    Layout = "~/Views/Shared/_LayoutPageAnunciante.cshtml";
}

<h2>Comprar Novo Pacote</h2>
@using (Html.BeginForm("ComprarNovo", "Anunciante", FormMethod.Post))
{
    <div class="panel">
        <div class="panel-body">
            <div class="row col-md-12">
                <div class="row">
                    <div class="form-group">
                        <label>Selecione:</label>
                        @Html.DropDownList("IdPacote", new SelectList(ViewBag.ListaPacotes, "Value", "Text"), new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary">Confirmar Compra</button>
                </div>
            </div>
        </div>
    </div>
}

